@model IEnumerable<UniEvents.Models.Event>
@using System.Security.Claims
@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
    var userName = User.FindFirst(ClaimTypes.Name)?.Value ?? "Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniEvents</title>

    <!-- رابط مكتبة الأيقونات Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- ========================================================== -->
    <!--  CSS المدمج: كل التنسيقات موجودة هنا داخل الصفحة          -->
    <!-- ========================================================== -->
    <style>
        /* General Body Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f4f7fa;
            color: #333;
        }

        /* Main Dashboard Container */
        .admin-dashboard {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header Styles */
        .header {
            background-color: #2c3e50;
            color: #ffffff;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header .logo {
                display: flex;
                align-items: center;
            }

                .header .logo img {
                    height: 40px;
                    margin-right: 15px;
                }

                .header .logo h2 {
                    margin: 0;
                    font-size: 1.8rem;
                }

            .header .admin-info {
                display: flex;
                align-items: center;
                font-size: 1.2rem;
            }

                .header .admin-info .fa-user-circle {
                    font-size: 1.8rem;
                    margin-left: 10px;
                }

        /* Logout Button Styles */
        .admin-info .logout-btn {
            color: #ffffff;
            font-size: 1.5rem;
            margin-left: 20px;
            text-decoration: none;
            transition: color 0.3s ease;
            vertical-align: middle;
        }

            .admin-info .logout-btn:hover {
                color: #ff4d4d;
                cursor: pointer;
            }

        /* Main Title */
        .title {
            text-align: center;
            margin: 40px 0;
            font-size: 2.5rem;
            color: #2c3e50;
        }

        /* Cards Container */
        .cards-container {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
            padding: 0 20px;
            flex-grow: 1; /* Makes the main content grow to push footer down */
        }

        /* Individual Card Styles */
        .card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 40px;
            width: 220px;
            text-decoration: none;
            color: #333;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .card i {
                font-size: 4rem;
                color: #3498db;
                margin-bottom: 20px;
            }

            .card p {
                margin: 0;
                font-size: 1.2rem;
                font-weight: bold;
            }

        /* Footer Styles */
        footer {
            background-color: #2c3e50;
            color: #bdc3c7;
            padding: 40px 20px 20px;
            margin-top: 50px;
        }

        .footer-columns {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
            padding-bottom: 30px;
            border-bottom: 1px solid #34495e;
        }

            .footer-columns > div {
                flex: 1;
                min-width: 200px;
            }

            .footer-columns h3, .footer-columns h4 {
                color: #ffffff;
                margin-bottom: 15px;
            }

            .footer-columns ul {
                list-style: none;
                padding: 0;
            }

                .footer-columns ul li {
                    margin-bottom: 10px;
                    color: #bdc3c7;
                }

        .social-icons i {
            font-size: 1.5rem;
            margin-right: 15px;
            cursor: pointer;
            transition: color 0.3s;
        }

            .social-icons i:hover {
                color: #ffffff;
            }

        .copyright {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
        }

    </style>
</head>
<body>
    <div class="admin-dashboard">
        <header class="header">
            <a asp-controller="Admin" asp-action="Dashboard" class="logo">
                <img src="~/image/UniEvents (2).png" alt="UniEvents Logo">
            </a>
            <div class="admin-info">
                <span>@userName</span>
                <i class="fa fa-user-circle"></i>
                <a asp-controller="Account" asp-action="Logout" class="logout-btn" title="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </header>

        <h1 class="title">Dashboard</h1>

        <main class="cards-container">
            <!-- Using Tag Helpers for better links -->
            <a asp-controller="Admin" asp-action="CreateEvent" class="card">
                <i class="fa fa-plus-square"></i>
                <p>Create Event</p>
            </a>
            <a asp-controller="Admin" asp-action="PendingEvents" class="card">
                <i class="fas fa-calendar-days"></i>
                <p>Pending Events</p>
            </a>
            <a asp-controller="Admin" asp-action="ApprovedEvents" class="card">
                <i class="fa fa-calendar-check"></i>
                <p>Approved Events</p>
            </a>
            <a asp-controller="Admin" asp-action="RejectedEvents" class="card">
                <i class="fa fa-calendar-times"></i>
                <p>Rejected Events</p>
            </a>
        </main>

        <footer>
            <div class="footer-columns">
                <div>
                    <h3>UniEvents</h3>
                    <p>Manage and explore events effortlessly...</p>
                    <div class="social-icons">
                        <i class="fab fa-instagram"></i>
                        <i class="fab fa-facebook"></i>
                        <i class="fab fa-whatsapp"></i>
                        <i class="fab fa-twitter"></i>
                    </div>
                </div>
                <div>
                    <h4>Help & Support</h4>
                    <ul>
                        <li>Customer Support</li>
                        <li>Organizer Support</li>
                        <li>Terms of Service</li>
                        <li>Privacy Policy</li>
                    </ul>
                </div>
                <div>
                    <h4>About us</h4>
                    <ul>
                        <li>Leadership</li>
                        <li>Our Vision</li>
                        <li>Features</li>
                        <li>Career</li>
                    </ul>
                </div>
                <div>
                    <h4>Contact us</h4>
                    <ul>
                        <li>Email: EventTribe@Gmail.com</li>
                        <li>Phone 1: 0796355890</li>
                        <li>Phone 2: 0792398007</li>
                    </ul>
                </div>
            </div>
            <p class="copyright">© 2025 UniEvents. ALL RIGHT RESERVED</p>
        </footer>
    </div>
</body>
</html>
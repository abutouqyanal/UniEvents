@model UniEvents.Models.Feedback

@* 
    هذا هو التصميم الجديد الذي يعرض أيقونة Bootstrap الافتراضية دائمًا.
    هذا يحل مشكلة الخطأ لأنه لم يعد يعتمد على وجود صورة للمستخدم.
*@

<div class="d-flex align-items-start gap-3 mb-4 border-bottom pb-3">
    <div class="feedback-avatar-icon flex-shrink-0">
        <i class="bi bi-person-circle"></i>
    </div>
    <div class="w-100">
        <div class="d-flex justify-content-between">
            <h6 class="mb-1 fw-bold">
                @if (Model.Attendee != null)
                {
                    @Model.Attendee.FirstName @Model.Attendee.LastName
                }
                else
                {
                    <text>Anonymous</text>
                }
            </h6>
            @if (Model.DatePosted != default)
            {
                <small class="text-muted" title="@Model.DatePosted.ToString("F")">@Model.DatePosted.ToString("dd MMM, yyyy")</small>
            }
        </div>
        <p class="mb-0 text-break">@Model.Comment</p>
    </div>
</div>